--Create table of musical artist with their name, country of origin, and genre of their music
CREATE TABLE artists (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    country TEXT,
    genre TEXT);
--Insert the artists info into the table
INSERT INTO artists (name, country, genre)
    VALUES ("Taylor Swift", "US", "Pop");
